<TwyrPowerSelect
	@allowClear={{@allowClear}}
	@closeOnSelect={{@closeOnSelect}}
	@defaultHighlighted={{@defaultHighlighted}}
	@extra={{hash label=@label labelPath=@labelPath required=@required passThru=@passThru inputClass=@inputClass}}
	@eventType={{@eventType}}
	@matcher={{@matcher}}
	@noMatchesMessage={{@noMatchesMessage}}
	@options={{@options}}
	@placeholder={{@placeholder}}
	@selected={{@selected}}

	@search={{@search}}
	@searchEnabled={{@searchEnabled}}
	@searchField={{@searchField}}
	@searchPlaceholder={{@searchPlaceholder}}

	@ebdTriggerComponent={{component this.subComponents.ebdTriggerComponent label=@label powerSelect=this._TwyrAutocomplete}}
	@ebdContentComponent={{component this.subComponents.ebdContentComponent powerSelect=this._TwyrAutocomplete}}

	@triggerClass={{@triggerClass}}
	@triggerComponent={{component this.subComponents.epsTriggerComponent errors=@errors hideAllMessages=@hideAllMessages isTouched=this.isTouched powerSelect=this._TwyrAutocomplete validationErrorMessages=@validationErrorMessages}}

	@contentClass={{@contentClass}}
	@optionsComponent={{this.subComponents.optionsComponent}}

	@noMatchesMessageComponent={{component this.subComponents.noMatchesMessageComponent onCreate=this.onCreate}}

	@onBlur={{this.onBlur}}
	@onChange={{this.onChange}}
	@onClose={{this.onClose}}
	@onFocus={{this.onFocus}}
	@onInput={{this.onInput}}
	@onKeydown={{@onKeydown}}
	@onOpen={{this.onOpen}}

	@scrollTo={{this.scrollTo}}

	as |Option PowerSelect|
>
	{{#with
		(hash
			id=PowerSelect.id

			Controls=PowerSelect.Controls
			Options=PowerSelect.Options
			Status=PowerSelect.Status
		)
		as |TwyrAutocomplete|
	}}
		{{#if (has-block)}}
			{{yield Option TwyrAutocomplete}}
		{{else}}
			<TwyrAutocomplete::Highlight
				@label={{if @labelPath (get Option @labelPath) Option}}
				@searchText={{TwyrAutocomplete.Options.searchText}}
				@flags="i"
			/>
		{{/if}}

		<span class="d-none" {{did-insert (fn this.didInsertPowerSelect TwyrAutocomplete)}} />
	{{/with}}
</TwyrPowerSelect>
