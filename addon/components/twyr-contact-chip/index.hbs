<md-contact-chips class="md-default-theme {{@class}}" ...attributes>
	<TwyrChips
		class="md-contact-chips"
		@readOnly={{@readOnly}}
		@addItem={{@addItem}}
		@removeItem={{@removeItem}}
		@requireMatch={{this._requireMatch}}
		@searchField={{this._searchField}}
		@content={{@content}}
		@options={{@options}}
		@defaultHighlighted={{@defaultHighlighted}}
		@placeholder={{@placeholder}}
		@search={{@search}}
		@matcher={{@matcher}}
		@noMatchesMessage={{@noMatchesMessage}} as |item type|
	>
		{{#if (eq type "suggestion")}}
			<div class="md-contact-suggestion">
				<img src={{get item this._imageField}} alt={{get item this._nameField}} class="md-contact-avatar" />
				<span class="md-contact-name">{{get item this._nameField}}</span>
				<span class="md-contact-email">{{get item this._emailField}}</span>
			</div>
		{{/if}}

		{{#if (eq type "chip")}}
			<div class="md-contact-avatar">
				<img src={{get item this._imageField}} alt={{get item this._nameField}} />
			</div>
			<span class="md-contact-name">
				{{get item this._nameField}}
			</span>
		{{/if}}
	</TwyrChips>
</md-contact-chips>