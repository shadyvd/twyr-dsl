<md-menu-item
	disabled={{@disabled}}
	{{did-insert this.didInsert}}
	{{on "mouseenter" this.handleMouseEnter}}
	...attributes
>
	{{#if this.shouldRenderButton}}
		<TwyrButton
			@disabled={{@disabled}}
			@href={{@href}}
			@target={{@target}}
			@onClick={{this.handleClick}}
		>
			{{yield}}
		</TwyrButton>
	{{else}}
		{{yield}}
	{{/if}}
</md-menu-item>