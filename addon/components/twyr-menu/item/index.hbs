<md-menu-item
	disabled={{@disabled}}
	{{did-insert this.didInsert}}
	{{on "mouseenter" this.handleMouseEnter}}
	...attributes
>
	{{#if this.shouldRenderButton}}
		<TwyrButton @onClick={{fn this.handleClick}} @href={{@href}} @target={{@target}} @disabled={{@disabled}}>
			{{yield}}
		</TwyrButton>
	{{else}}
		{{yield}}
	{{/if}}
</md-menu-item>