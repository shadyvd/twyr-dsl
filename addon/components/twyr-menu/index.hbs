<BasicDropdown
	@triggerComponent={{this.subComponents.trigger}}
	@contentComponent={{this.subComponents.content}}
	@calculatePosition={{fn this._calculatePosition}}
	@onClose={{fn this.close}}
	@onOpen={{fn this.open}}
	...attributes
	as |BD|
>
	{{yield (hash
		Trigger=BD.Trigger
		Content=BD.Content
	)}}
</BasicDropdown>
