<BasicDropdown
	@triggerComponent={{this.subComponents.trigger}}
	@contentComponent={{this.subComponents.content}}
	@calculatePosition={{this._calculatePosition}}
	@onClose={{this.close}}
	@onOpen={{this.open}}
	...attributes
	as |BD|
>
	{{yield (hash
		Trigger=BD.Trigger
		Content=BD.Content
	)}}
</BasicDropdown>
