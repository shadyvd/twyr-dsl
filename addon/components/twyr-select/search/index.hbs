{{#if @searchEnabled}}
	<md-select-header class="twyr-power-select-search md-searchbox">
		<input
			type="search"
			class="twyr-power-select-search-input md-searchinput"
			autocapitalize="off"
			autocomplete="off"
			autocorrect="off"
			role="combobox"
			spellcheck="false"
			value={{@select.searchText}}
			aria-controls={{@listboxId}}
			placeholder={{@searchPlaceholder}}

			{{did-insert this.focusInput}}

			{{on "input" @onInput}}
			{{on "focus" @onFocus}}
			{{on "blur" @onBlur}}
			{{on "keydown" this.handleKeydown}}
		/>
	</md-select-header>
{{/if}}