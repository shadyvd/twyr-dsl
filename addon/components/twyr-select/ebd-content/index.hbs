{{!-- send the backdrop to the same place as the content --}}
{{#if @dropdown.isOpen}}
	{{#maybe-in-element this.destinationElement @renderInPlace}}
		<TwyrBackdrop class="md-select-backdrop md-click-catcher" @onClick={{@dropdown.actions.close}} />
	{{/maybe-in-element}}
{{/if}}

<BasicDropdownContent
	class="md-select-menu-container md-clickable {{if this._isActive "md-active"}}"
	{{!-- proxy all the things that ebd gives us --}}
	@dropdown={{@dropdown}}
	@hPosition={{@hPosition}}
	@renderInPlace={{@renderInPlace}}
	@preventScroll={{@preventScroll}}
	@rootEventType={{@rootEventType}}
	@vPosition={{@vPosition}}
	@destination={{@destination}}
	@top={{@top}}
	@left={{@left}}
	@right={{@right}}
	{{!-- @width={{@width}} --}}
	@height={{@height}}
	@otherStyles={{this.customStyles}}
	@shouldReposition={{fn this.shouldReposition}}
	{{did-insert this.animateIn}}
	{{will-destroy this.animateOut}}
	...attributes
>

	{{! template-lint-disable no-invalid-interactive }}
	<md-select-menu
		class="md-default-theme {{if @searchEnabled "md-overflow"}}"
		{{on "keydown" this.handleKeyDown}}
	>
		{{yield}}
	</md-select-menu>
</BasicDropdownContent>