{{!-- send the backdrop to the same place as the content --}}
{{#if @dropdownStatus.isOpen}}
	{{#maybe-in-element this.destinationElement @renderInPlace}}
		<TwyrBackdrop
			class="md-select-backdrop md-click-catcher"
			{{on "click" @dropdownControls.close}}
		/>
	{{/maybe-in-element}}
{{/if}}

<TwyrBasicDropdown::Content
	class="md-select-menu-container md-clickable{{if this._isActive " md-active"}}"

	@destinationId={{@destinationId}}
	@dropdownId={{@dropdownId}}
	@dropdownControls={{@dropdownControls}}
	@dropdownStatus={{@dropdownStatus}}

	@preventScroll={{@preventScroll}}
	@renderInPlace={{@renderInPlace}}
	@rootEventType={{@rootEventType}}

	@position={{@position}}
	@otherStyles={{this.customStyles}}

	@xAlign={{@xAlign}}
	@yAlign={{@yAlign}}

	@registerWithDropdown={{@registerWithDropdown}}
	@shouldReposition={{this.shouldReposition}}

	{{did-insert this.animateIn}}
	{{will-destroy this.animateOut}}

	...attributes
>
	<md-select-menu
		class="md-default-theme{{if @searchEnabled " md-overflow"}}"
		{{on "keydown" this.handleKeyDown}}
	>
		{{yield}}
	</md-select-menu>
</TwyrBasicDropdown::Content>