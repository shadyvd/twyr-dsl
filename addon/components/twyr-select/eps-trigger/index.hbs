<md-select-value class="md-select-value{{if this.isPlaceholder " md-select-placeholder"}}">
	{{#if @powerSelect.Options.selected}}
		<span class="twyr-power-select-selected-item">
			{{yield @powerSelect.Options.selected @powerSelect}}
		</span>

		{{#if (and @allowClear (not @powerSelect.Status.isDisabled))}}
			<span
				class="twyr-power-select-clear-btn"
				role="button"
				{{on "mousedown" this.clear}}
				{{on "touchstart" this.clear}}
			>
				&times;
			</span>
		{{/if}}
	{{else if @placeholder}}
		<span class="twyr-power-select-placeholder">
			{{@placeholder}}
		</span>
	{{else if @extra.label}}
		<span class="twyr-power-select-placeholder">
			{{@extra.label}}
		</span>
	{{/if}}
	<span class="md-select-icon" aria-hidden="true"></span>
</md-select-value>