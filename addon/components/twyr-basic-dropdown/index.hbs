{{#with
	(hash
		id=this._elementId
		Controls=this._dropdownControls

		Content=(component
			(or @contentComponent this.subComponents.content)

			destinationId=this.destinationId
			dropdownId=this._elementId
			dropdownControls=this._dropdownControls
			dropdownStatus=this._dropdownStatus

			preventScroll=@preventScroll
			renderInPlace=this.renderInPlace
			rootEventType=(or @rootEventType "click")

			position=this._currentPosition
			otherStyles=this._otherStyles

			xAlign=this.xAlign
			yAlign=this.yAlign

			registerWithDropdown=this.registerContentElement
		)

		Status=this._dropdownStatus

		Trigger=(component
			(or @triggerComponent this.subComponents.trigger)

			dropdownId=this._elementId
			dropdownControls=this._dropdownControls
			dropdownStatus=this._dropdownStatus

			renderInPlace=this.renderInPlace

			position=this._currentPosition
			otherStyles=this._otherStyles

			xAlign=this.xAlign
			yAlign=this.yAlign

			registerWithDropdown=this.registerTriggerElement
		)

		xAlign=this.xAlign
		yAlign=this.yAlign
	)
	as |Dropdown|
}}
	<div
		class="{{if this.renderInPlace "twyr-basic-dropdown position-relative" "shadyvd"}}"
		{{requires-id}}
		{{did-insert this.didInsert}}
		{{did-mutate this.didMutate attributeFilter=(array "disabled" "id")}}
		...attributes
	>
		{{yield Dropdown}}
	</div>
{{/with}}